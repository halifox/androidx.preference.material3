<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 简单的Preference示例 -->
    <Preference
        android:key="simple_preference"
        android:title="简单设置"
        android:summary="这是一个简单的设置选项"/>

    <!-- SwitchPreferenceCompat 示例 -->
    <SwitchPreferenceCompat
        android:key="switch_preference"
        android:title="启用功能"
        android:summary="启用或禁用此功能"
        android:defaultValue="true"/>

    <!-- EditTextPreference 示例 -->
    <EditTextPreference
        android:key="edittext_preference"
        android:title="输入设置"
        android:summary="请输入文本值"
        android:inputType="text"
        android:hint="输入内容"/>

    <!-- ListPreference 示例 -->
    <ListPreference
        android:key="list_preference"
        android:title="选择设置"
        android:summary="从列表中选择一个选项"
        android:entries="@array/list_options"
        android:entryValues="@array/list_option_values"
        android:defaultValue="option_1"/>

    <!-- CheckBoxPreference 示例 -->
    <CheckBoxPreference
        android:key="checkbox_preference"
        android:title="复选框设置"
        android:summary="勾选以启用功能"
        android:defaultValue="false"/>

    <!-- RingtonePreference 示例 -->
<!--    <RingtonePreference-->
<!--        android:key="ringtone_preference"-->
<!--        android:title="选择铃声"-->
<!--        android:summary="选择您喜欢的铃声"-->
<!--        android:ringtoneType="notification"/>-->

    <!-- SeekBarPreference 示例 -->
    <SeekBarPreference
        android:key="seekbar_preference"
        android:title="音量设置"
        android:summary="拖动滑块以调整音量"
        android:defaultValue="50"
        android:max="100"
        android:stepSize="1"/>

    <!-- MultiSelectListPreference 示例 -->
    <MultiSelectListPreference
        android:key="multi_select_preference"
        android:title="多选设置"
        android:summary="从选项中选择多个值"
        android:entries="@array/multi_select_options"
        android:entryValues="@array/multi_select_values"/>

</PreferenceScreen>
